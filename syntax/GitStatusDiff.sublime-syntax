%YAML 1.2
---
name: GitStatusDiff
hidden: true
file_extensions: 
  - sgits
scope: text.sgits

contexts:
  main:
    - match: \b(M|MM)\b
      scope: markup.changed

    - match: \b(A)\b
      scope: markup.inserted

    - match: \b(D)\b
      scope: markup.deleted

    - match: \b(\?{1,2})\b
      scope: markup.ignored